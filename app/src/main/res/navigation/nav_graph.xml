<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.example.myapplication.ui.fragments.AnimeFragment"
        android:label="AnimeFragment" >
        <action
            android:id="@+id/action_animeFragment_to_animeViewFragment"
            app:destination="@id/animeViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeViewFragment"
        android:name="com.example.myapplication.ui.fragments.AnimeViewFragment"
        android:label="fragment_anime_view"
        tools:layout="@layout/fragment_anime_view" >
        <argument
            android:name="anime"
            app:argType="com.example.myapplication.models.Data" />
    </fragment>
</navigation>